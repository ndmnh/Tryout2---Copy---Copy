<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="20dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardPreventCornerOverlap="true"
        android:id="@+id/card_view_profile"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        card_view:cardCornerRadius="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/fragment_profile_title"
                android:textColor="#2c3e50"
                android:background="#bdc3c7"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="  Profile"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/fragment_profile_title"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_menu_profile"
                />
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/profile_picture"
                />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Tony Hawk Chu"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/profile_picture"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/text_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/text_name"
                />
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="912039"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/name"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/text_mobilenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number:"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/text_age"
                />
            <TextView
                android:id="@+id/mobilenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/age"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:id="@+id/topleftpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_profile"/>

        </RelativeLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:src="@android:drawable/ic_menu_edit"
            android:clickable="true"
            android:onClick="CallEditProfile"
            />
    </android.support.v7.widget.CardView>

</RelativeLayout>