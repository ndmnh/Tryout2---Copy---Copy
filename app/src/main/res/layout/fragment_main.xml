<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2D5DA"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardPreventCornerOverlap="true"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:id="@+id/rlLock"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            >
        <TextView
            android:textColor="#2c3e50"
            android:background="#1abc9c"
            android:typeface="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Lock"
            android:id="@+id/text_overview"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/text_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lock Status:"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/text_overview"
                />
            <TextView
                android:id="@+id/lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locked"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_overview"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_lock"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardPreventCornerOverlap="true"
        android:id="@+id/card_view2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        card_view:cardCornerRadius="10dp"
        android:elevation="20dp"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:id="@+id/rlWeight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            >
            <TextView
                android:textColor="#2c3e50"
                android:background="#f1c40f"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="  Weight"
                android:id="@+id/text_overview2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/text_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Weight:"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/text_overview2"
                />
            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="over 9000kg"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_overview2"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_weight"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardPreventCornerOverlap="true"
        android:id="@+id/card_view3"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/card_view"
        >
        <RelativeLayout
            android:id="@+id/rlLocation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            >
            <TextView
                android:textColor="#2c3e50"
                android:background="#e74c3c"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="  Location"
                android:id="@+id/text_overview3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/text_overview3"
                />
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singapore"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_overview3"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_location"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardPreventCornerOverlap="true"
        android:id="@+id/card_view4"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/card_view"
        >
        <RelativeLayout
            android:id="@+id/rlHumidity"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            >
            <TextView
                android:textColor="#34495e"
                android:background="#3498db"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="  Humidity"
                android:id="@+id/text_overview4"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/text_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity Level:"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_below="@id/text_overview4"
                />
            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="very very wet liao"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_overview4"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_humidity"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>